<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#DDDDDD"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center_horizontal"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingBottom="5dp"
                android:text="@string/subscription_add_item_visits" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingBottom="5dp"
                android:text="@string/subscription_add_item_terms" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/subscription_add_item_id"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/subscription_add_item_visits"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/subscription_add_item_terms"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingBottom="5dp"
                android:text="@string/subscription_add_item_unlimited_text"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
