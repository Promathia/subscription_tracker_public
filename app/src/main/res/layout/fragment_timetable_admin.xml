<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/timetable_progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/timetable_main_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/action_undo"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/undo" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_redo"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/redo" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_bold"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/bold" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_italic"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/italic" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_strikethrough"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/strikethrough" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_underline"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/underline" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_heading1"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/h1" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_heading2"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/h2" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_heading3"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/h3" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_heading4"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/h4" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_heading5"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/h5" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_heading6"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/h6" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_indent"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/indent" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_outdent"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/outdent" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_align_left"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/justify_left" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_align_center"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/justify_center" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_align_right"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/justify_right" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_insert_bullets"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/bullets" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/action_insert_numbers"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:background="@drawable/rte_tools_background"
                        android:contentDescription="@drawable/rte_tools_background"
                        android:padding="4sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/numbers" />

                </LinearLayout>
            </HorizontalScrollView>

            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/timetable_admin_rte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:gravity="center"
                android:text="@string/timetable_preview_text_will_appear_here"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/timetable_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/timetable_text_admin_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@null"
                android:enabled="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/timetable_submit_text_button"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@color/colorPrimaryDark"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="@string/timetable_save_button_label"
                    android:textColor="#cdd8f1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>